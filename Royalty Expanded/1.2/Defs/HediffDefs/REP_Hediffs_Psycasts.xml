<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="PsycastHediffBase">
    <defName>Dreadspike</defName>
    <label>dreadspike</label>
    <description>Psychically-induced feelings of dread, discomfort, and dorcelessness. This causes a drastic decrease in brain functionality due to excessive pain and bad feelings.</description>
    <isBad>true</isBad>
    <stages>
      <li>
        <partEfficiencyOffset>-0.50</partEfficiencyOffset>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="DiseaseBase">
    <defName>PsychicHealing</defName>
    <label>psychic healing coma</label>
	<description>A psychically-induced healing coma.</description>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>10000~10000</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
	    <naturalHealingFactor>2.5</naturalHealingFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
	</HediffDef>

</Defs>